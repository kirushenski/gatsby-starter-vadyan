{
  "name": "gatsby-starter",
  "version": "0.1.0",
  "description": "Gatsby starter for personal projects",
  "keywords": [
    "gatsby"
  ],
  "repository": "https://github.com/p1t1ch/gatsby-starter",
  "author": "p1t1ch <belobeev.kirill@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "coverage": "open ./coverage/lcov-report/index.html",
    "lint": "jest --config test/jest.lint.js",
    "type-check": "tsc --noEmit",
    "validate": "npm run test && npm run type-check && npm run build",
    "setup": "npm i && npm run validate"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore",
      "fix": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,mdx,js}": "jest --findRelatedTests"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions",
    "last 2 ChromeAndroid major versions",
    "last 2 iOS major versions"
  ],
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "gatsby": "^2.24.1",
    "gatsby-image": "^2.4.13",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.5",
    "@types/jest": "^26.0.4",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-jest": "^26.1.0",
    "babel-preset-gatsby": "^0.5.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mdx": "^1.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "eslint-plugin-testing-library": "^3.3.1",
    "gatsby-alias-imports": "^1.0.4",
    "gatsby-plugin-emotion": "^4.3.10",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^2.6.19",
    "gatsby-plugin-svgr": "^2.0.2",
    "gatsby-source-filesystem": "^2.3.19",
    "gatsby-transformer-sharp": "^2.5.11",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-emotion": "^10.0.32",
    "jest-runner-eslint": "^0.10.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "typescript": "^3.9.6"
  }
}
